<Window x:Class="KeyScripter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="RecordButton" Content="● Record" Width="100" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                Background="Red" Foreground="White" Click="RecordButton_Click" />
        <Button x:Name="PlayButton" Content="▶ Play" Width="100" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="120,20,0,0"
                Background="Green" Foreground="White" Click="PlayButton_Click" />
        <TextBox x:Name="OutputTextBox" Width="700" Height="300"
                 HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                 IsReadOnly="True" TextWrapping="Wrap" />
    </Grid>
</Window>