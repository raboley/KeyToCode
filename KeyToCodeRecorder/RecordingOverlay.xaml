<Window x:Class="KeyScripter.RecordingOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="200"
        Height="50">
    <Border Background="#AAFF0000" CornerRadius="10" Padding="10">
        <TextBlock Text="Recording..." Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</Window>